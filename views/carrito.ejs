<div class="container-fluid" id="colorF">
    <div class="row" id="filasPHome" >
        <div class="col-12">
            <h2 class="products-title">Carrito</h2>
        </div>



        <% userCart.forEach(item => { %>
        <div class="col-12 col-sm-6 col-lg-3">

           
            <article class="product-box_data" >
                <h3>Item</h3>
                <p>ID-PRODUCTO: <%= item.id_producto %></p>
                <p>NOMBRE:<%= item.nombre_vino %></p>
                <p>PRECIO:$ <%= item.precio_venta %></p>
                <p>CANTIDAD</p>
                <p>TOTAL ITEM</p>
                <button type="submit" class="btn btn-primary" style='background-color:red'>Eliminar</button>

            </article>
          

        </div>
        <%})%>
        <div class="col-12" id="carritoComprar">
            <h4 >TOTAL CARRITO = xxx</h4>
            <button type="submit" class="btn btn-primary" style='background-color:green ' >COMPRAR</button>

            
           
        </div>
        

    </div>

</div>
